<?xml version="1.0" encoding="utf-8"?>
<layout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".presentation.MenuFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/logo"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginVertical="8dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/davids_team_logo" />

            <ImageButton
                android:id="@+id/acButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginVertical="8dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/acustic_logo" />

            <ImageButton
                android:id="@+id/egButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginVertical="8dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/electro_logo" />

            <ImageButton
                android:id="@+id/bassButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginVertical="8dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/bass_logo" />

            <ImageButton
                android:id="@+id/drumsButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginVertical="8dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/drums_logo" />

            <ImageButton
                android:id="@+id/pianoButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:layout_marginVertical="8dp"
                android:background="@color/black"
                android:scaleType="fitCenter"
                android:src="@drawable/piano_logo" />

        </LinearLayout>
    </ScrollView>
</layout>