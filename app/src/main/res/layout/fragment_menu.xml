<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.MenuFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:src="@drawable/davids_team_logo" />

        <ImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:src="@drawable/acustic_logo" />

        <ImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:src="@drawable/electro_logo" />

        <ImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:id="@+id/bassButton"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:src="@drawable/bass_logo" />

        <ImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:src="@drawable/drums_logo" />

        <ImageButton
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginVertical="8dp"
            android:background="@color/black"
            android:scaleType="fitCenter"
            android:src="@drawable/micro_logo" />

    </LinearLayout>
</ScrollView>